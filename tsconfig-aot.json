{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
	"noImplicitAny": false,
	"outDir": "dist/npm"
  },
  "typeRoots": [
    "./node_modules/@types/"
  ],
  "exclude": [
    "node_modules/*",
    "dist/*"
  ],
  "files": [
    "src/main.ts"
  ],
  "angularCompilerOptions": {
	"skipTemplateCodegen": true
  }
}
